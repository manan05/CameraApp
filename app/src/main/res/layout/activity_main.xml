<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="362dp"
            android:layout_height="387dp" app:srcCompat="@android:color/darker_gray"
            android:id="@+id/photoImageView" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:contentDescription="@android:string/emptyPhoneNumber" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/cameraButton"
            app:layout_constraintVertical_chainStyle="spread_inside"/>
    <Button
            android:layout_width="234dp"
            android:layout_height="wrap_content"
            android:id="@+id/cameraButton"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="36dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/photoImageView" app:layout_constraintVertical_bias="1.0"
            android:contentDescription="@string/camera_button" tools:text="@string/camera_button"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:textStyle="bold"
            android:textColor="@android:color/background_light" android:visibility="visible"
            style="@android:style/Widget.DeviceDefault.Button" android:elevation="0dp"
            android:backgroundTint="@android:color/darker_gray" android:text="@string/camera_button"/>
</android.support.constraint.ConstraintLayout>